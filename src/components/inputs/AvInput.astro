---
import { inputBaseClass, inputSizeClasses, invalidClasses } from "./inputStyles";

export interface Props {
  class?: string;
  size?: keyof typeof inputSizeClasses;
  invalid?: boolean;
  type?: string;
  [key: string]: any;
}

const {
  class: className = "",
  size = "md",
  invalid = false,
  type = "text",
  ...rest
} = Astro.props as Props;

const classes = [
  inputBaseClass,
  inputSizeClasses[size] ?? inputSizeClasses.md,
  invalid ? invalidClasses : "",
  className,
]
  .filter(Boolean)
  .join(" ");
---

<input type={type} class={classes} {...rest} />
