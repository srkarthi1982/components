---
import ComponentsLayout from "../layouts/ComponentsLayout.astro";
import { componentDocs } from "../data/componentDocs";

const categories = [
  "Buttons",
  "Inputs",
  "Forms",
  "Cards",
  "Navigation",
  "Tables",
  "Feedback",
  "Overlays",
  "Typography",
  "Utilities",
];

const groupedComponents = categories
  .map((category) => ({
    category,
    items: componentDocs.filter((doc) => doc.category === category),
  }))
  .filter((group) => group.items.length > 0);
---

<ComponentsLayout title="Ansiversa Components">
  <section class="space-y-6">
	<h1 class="mt-2 text-4xl font-bold">Build screens fast with ready-made tokens</h1>
      <p class="mx-auto mt-4 max-w-3xl text-base text-[var(--ans-fg-muted)]">
        Every component is converted from HyperUI and aligned to the Ansiversa design tokens. Browse the library,
        review usage snippets, and click through to component-specific pages for more details.
      </p>
    <h2 class="text-2xl font-semibold">Component Directory</h2>
    <p class="text-sm text-[var(--ans-fg-muted)]">
      Browse the entire catalog below. Each bullet links to an individual page with implementation status, live preview,
      and usage guidance.
    </p>

    {groupedComponents.map((group) => (
      <div id={group.category.toLowerCase()} class="space-y-2">
        <h3 class="text-lg font-semibold">{group.category}</h3>
        <ul class="list-disc space-y-2 pl-6">
          {group.items.map((doc) => (
            <li>
              <a class="font-semibold text-[var(--ans-primary)] hover:underline" href={`/${doc.slug}`}>
                {doc.name}
              </a>
              <span class="ml-2 text-sm text-[var(--ans-fg-muted)]">
                {doc.status === "ready" ? "Ready to use" : "Planned component"}
              </span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </section>
</ComponentsLayout>
